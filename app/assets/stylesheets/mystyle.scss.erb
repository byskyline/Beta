html, body{
  height: 100%;
}
.page-wrapper{
 min-height: 100%;
}

h1, h2, h3, h4, h5, a, p, span{
  font-family:"Helvetica Neue", "微軟正黑體", "Microsoft JhengHei"
}



.fa-tags{
  color:#888;
}

/*all*/
.tags{
  span{
  padding:0 2px;
  margin:0 1px;
  color:#888;
  }
}

.text_p{
  font-family:"Helvetica Neue", "微軟正黑體", "Microsoft JhengHei", "Arial", "sans-serif";
  font-size: 13px;
  color: #909090;
}

h2{
  margin: 0px;
}

.padding_r{
  padding-right:0px;
}
.padding_all{
  padding:0px;
}

.a{
  text-decoration: none;
}

.container-fluid{
  padding: 0px;
}

.right{
  text-align:right;
}

.left{
  text-align:left;
  margin-bottom: 25px;
  h1{
    margin: 0;
  }

}

.col-sm-12{
  text-align:center;
}

.modal-title{
  text-align:center;
}

.modal-header{
  border:0px;
}

/*Log_in*/
.log_in{
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 30px 20px;
  margin-top: 25px;
  .list-group-item{
    color: #fff;
    background-color: #4769A5;
  }
  .list-group-item:hover{
    color: #fff;
    background-color: #3B5998;
  }
  .or{
    text-align: center;
  }
}

/*resume*/
.personal-resume{
  text-align: center;
  border-radius: 5px;
  background-color: #ddd;
}

/*view-resume*/
.view-resume{
  h3{
    display: inline-block;
  }
}
.view-resume-title{
  border-left: 5px solid #16a;
  background-color: #f8f8f8;
}
.view-resume-detail{
  margin:20px 0;

  .glyphicon-map-marker{
    color: #62879B;
  }
  .glyphicon-chevron-right{
    color: #62879B;
  }
}

.view-resume-content{
    padding-left: 9px;
    margin-left: 7px;
    border-left:1px #62879B solid;
}

.view-resume-company-name{
  font-size: 18px;
}

/*登入外框*/
.account{
  border:1px solid #ddd;
  border-radius: 5px;
  padding: 20px;
  p{
    color: #737373;
    font-size: 13px;
  }
  h5{
    color:#16a;
    font-weight: bold;
  }
}



.resume{
  border:1px solid #ddd;
  border-radius: 5px;
  padding: 20px;
  p{
    color: #737373;
    font-size: 13px;
  }
  h5{
    color:#16a;
    font-weight: bold;
  }
}

/*all_form-control*/
.form-control{
  border-width:1px;
  border-radius:0;
  border-color:#ccc;
  box-shadow:none;
}

/*admin*/

.navbar-form{
  display: inline-block;
}

 .dropdown{
  display: inline-block;
}

.image{
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 5px;
  margin-top: 25px;
}

.admin-sidebar{
  text-align:center;
}

.tag_border{
  margin-bottom: 5px;
}

/*Top*/

.logo{
  text-align:center;
}

.top{
    padding:9px 0;
    border-bottom:1px #ddd solid;
  h3{
    margin:0;
    }
}

.top-container{
  margin-bottom:20px;
  padding:9px 0;
}

.link_active{
  border-bottom: 3px #adf solid;
  span{
    color: #16a;
  }
}
.nav_left{
  a{
    padding: 15px 5px;
    margin:0 5px;
    vertical-align: center;
    line-height: 34px;
    color: #000;
    text-decoration: none;
  }

  .link:hover{
    border-bottom: 3px #ddd solid;
  }
}

.nav_right{
  text-align:right;
  padding-right:0px;
  a{
    padding: 0px 5px 15px 5px;
    margin:0 5px;
    line-height: 34px;
    color: #000;
    text-decoration: none;
  }
  a:hover{
    border-bottom: 3px #ddd solid;
  }
}

.company-link{
  width: 49%;
  margin: 2px 0;
}

.web{
  background:#5bc0de;
  border-color: #46b8da;
  color:#FFF;
  }

.web:hover,
.web:focus,
.web:active,
.web.active,
.open .dropdown-toggle.web {
  color: #fff;
  background-color: #2f96b4;
  border-color: #49afcd;
}

.ios{
  background:#000;
  border-color: #000;
  color:#FFF;
  }

.ios:hover,
.ios:focus,
.ios:active,
.ios.active,
.open .dropdown-toggle.web {
  color: #fff;
  background-color: #383838;
  border-color: #383838;
}

.android{
  background:#96C200;
  border-color: #96C200;
  color:#FFF;
  }

.android:hover,
.android:focus,
.android:active,
.android.active,
.open .dropdown-toggle.web {
  color: #fff;
  background-color: #719300;
  border-color: #719300;
}

.fb{
  background:#3B5998;
  border-color: #4769A5;
  color:#FFF;
  }

.fb:hover,
.fb:focus,
.fb:active,
.fb.active,
.open .dropdown-toggle.fb {
  color: #fff;
  background-color: #4769A5;
  border-color: #3B5998;
}

.fb_center{
  text-align: center;
  color: #909090;
}
.fb_image{
  width:150px;
  margin-bottom: 20px;
  border-radius: 5px;
}

.photo{
  width:150px;
  margin-bottom: 20px;
  border-radius: 5px;
}

// footer
.footer-bg{
  hight:300px;
  background-image: url("<%= asset_path("footer-bg.jpg")%>");
  margin-top:50px;
}
.copy{
  color:#fff;
  padding:25px 5px;
  font-size:12px;
  p{
    line-height: 34px;
    margin:0;
  }
}

.footer-nav{
  color:#fff;
  padding:25px 5px;
  font-size:18px;
  font-weight: bold;
  text-align:center;

  a{
    color:#fff;
  }

  a:hover{
    color:#fff;
    background-color:transparent;
  }
}

.btn-inverse{
  background-color:#222;
}

@media screen and (min-width: 200px) and (max-width: 979px) {
.nav_right{
  text-align:center;
  }

.nav_left{
text-align:center;
margin:10px 0;
a{
    padding: 15px 0px;
  }
}

.right{
  text-align:center;
}
}
