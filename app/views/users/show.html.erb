<div class="container">
    <div class=" col-sm-offset-1 col-sm-3">
      <%= render :partial => "users/sidebar"%>
    </div>

   <div class="col-sm-7 account">
    <%if flash[:notice].present?%>
      <div class="alert alert-success text-center" role="alert"><%= flash[:notice] %></div>
    <%end%>

    <%=form_for @user, :url => user_path(@user) do |u|%>
    <div class="form-group">
      <h5><%= u.label :name, t("user.name")+"*"%></h5>
      <%= u.text_field :name, :class => "form-control", :required => true%>
    </div>

    <div class="form-group">
      <h5><%= u.label :email, t("email")+"*"%></h5>
      <%= u.email_field :email, :class => "form-control", :required => true%>
      <p class="glyphicon glyphicon-exclamation-sign">＊請確認您登錄的為常用Email，以利徵才企業能確實聯繫到您並即時收到來自Yourator的職涯訊息</p>
    </div>

    <div class="form-group">
      <h5><%= u.label :sex, t("sex")%></h5>
      <%= u.select :sex, user_sexs_options , { :include_blank => t(:select_prompt) }, :class => "form-control" %>
    </div>

    <div class="form-group">
      <h5><%= u.label :phone, t("phone")%></h5>
      <%= u.phone_field :phone, :class => "form-control"%>
    </div>

    <div class="form-group">
      <h5><%= u.label :birthday, t("birthday")%></h5>
      <%= u.date_select :birthday, start_year: 1900, end_year: 2020, include_blank: true%>
    </div>

    <div class="form-group">
      <h5><%= u.label :photo, t("photo")%></h5>
      <%= u.file_field :photo, :class => "form-control"%>
      <p class="glyphicon glyphicon-exclamation-sign">可上傳你的大頭照，建議大小:250x320</p>
    </div>

    <div class="form-group">
    <%= u.submit t("update"), :class => "btn btn-success"%>
    </div>
    <%end%>
  </div>
</div>
