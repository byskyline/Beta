<div class="row">
  <%= render :partial => "admin/companies/sidebar"%>
    <div class="col-md-10">
    <div class="row">

      <%if params[:area_edit]%>
      <%area_url = admin_area_path(@area) %>
      <%else%>
      <%area_url = admin_areas_path%>
      <%end%>

      <%if params[:category_edit]%>
      <%category_url = admin_company_category_path(@category) %>
      <%else%>
      <%category_url = admin_company_categories_path%>
      <%end%>

      <%if params[:job_category_edit]%>
      <%job_category_url = admin_job_category_path(@job_category) %>
      <%else%>
      <%job_category_url = admin_job_categories_path%>
      <%end%>

      <%if params[:article_category_edit]%>
      <%article_category_url = admin_article_category_path(@article_category) %>
      <%else%>
      <%article_category_url = admin_article_categories_path%>
      <%end%>

      <div class="col-sm-6">
      <%=form_for @area, :url => area_url do |f|%>
        <div class="form-group">
          <%= f.label :name, "新增地區:"%>
          <%= f.text_field :name, :class => "form-control"%>
          <%= f.label :position, "排序"%>
          <%= f.text_field :position, :class => "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "送出", :class => "btn btn-success"%>
        </div>
      <%end%>
      <br>
      <br>
        <table class="table table-striped">
          <tr class="danger">
            <td>ID</td>
            <td>標籤</td>
            <td>數量</td>
            <td>排序</td>
            <td>編輯</td>
            <td>刪除</td>
          </tr>
          <%@areas.each do |c|%>
          <tr>
            <td><%=c.id%></td>
            <td><%=c.name%></td>
            <td><%=c.companies_count%></td>
            <td><%=c.position%></td>
            <td><%= link_to "編輯", admin_company_categories_path(:area_edit=>c),:class => "btn btn-default"%></td>
            <td><%= link_to "刪除", admin_area_path(c), :method => :delete,:class => "btn btn-default"%></td>
          </tr>
           <%end%>
           <tr>
           </tr>
        </table>
      </div>

      <div class="col-sm-6">
      <%=form_for @category, :url => category_url do |f|%>
        <div class="form-group">
          <%= f.label :name, "新增公司類別:"%>
          <%= f.text_field :name, :class => "form-control"%>
          <%= f.label :position, "排序:"%>
          <%= f.text_field :position, :class => "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "送出", :class => "btn btn-success"%>
        </div>
      <%end%>
      <br>
      <br>
        <table class="table table-striped">
          <tr class=" success">
            <td>ID</td>
            <td>類別</td>
            <td>數量</td>
            <td>排序</td>
            <td>編輯</td>
            <td>刪除</td>
          </tr>
          <%@categories.each do |c|%>
          <tr>
            <td><%=c.id%></td>
            <td><%=c.name%></td>
            <td><%=c.companies_count%></td>
            <td><%=c.position%></td>
            <td><%= link_to "編輯", admin_company_categories_path(:category_edit=>c),:class => "btn btn-default"%></td>
            <td><%= link_to "刪除", admin_company_category_path(c), :method => :delete,:class => "btn btn-default"%></td>
          </tr>
           <%end%>
        </table>
      </div>
      </div>
      <div class="row">
      <div class="col-sm-6">
      <%=form_for @job_category, :url => job_category_url do |f|%>
        <div class="form-group">
          <%= f.label :name, "新增職缺類別:"%>
          <%= f.text_field :name, :class => "form-control"%>
          <%= f.label :position, "排序:"%>
          <%= f.text_field :position, :class => "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "送出", :class => "btn btn-success"%>
        </div>
      <%end%>
      <br>
      <br>
        <table class="table table-striped">
          <tr class="warning">
            <td>ID</td>
            <td>類別</td>
            <td>數量</td>
            <td>排序</td>
            <td>編輯</td>
            <td>刪除</td>
          </tr>
          <%@job_categories.each do |c|%>
          <tr>
            <td><%=c.id%></td>
            <td><%=c.name%></td>
            <td><%=c.jobs_count%></td>
            <td><%=c.position%></td>
            <td><%= link_to "編輯", admin_company_categories_path(:job_category_edit=>c),:class => "btn btn-default"%></td>
            <td><%= link_to "刪除", admin_job_category_path(c), :method => :delete,:class => "btn btn-default"%></td>
          </tr>
           <%end%>
           <tr>
           </tr>
        </table>
      </div>

      <div class="col-sm-6">
      <%=form_for @article_category, :url => article_category_url do |f|%>
        <div class="form-group">
          <%= f.label :name, "新增文章類別:"%>
          <%= f.text_field :name, :class => "form-control"%>
          <%= f.label :position, "排序:"%>
          <%= f.text_field :position, :class => "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "送出", :class => "btn btn-success"%>
        </div>
      <%end%>
      <br>
      <br>
        <table class="table table-striped">
          <tr class="info">
            <td>ID</td>
            <td>類別</td>
            <td>數量</td>
            <td>排序</td>
            <td>編輯</td>
            <td>刪除</td>
          </tr>
          <%@article_categories.each do |c|%>
          <tr>
            <td><%=c.id%></td>
            <td><%=c.name%></td>
            <td><%=c.articles_count%></td>
            <td><%=c.position%></td>
            <td><%= link_to "編輯", admin_company_categories_path(:article_category_edit=>c),:class => "btn btn-default"%></td>
            <td><%= link_to "刪除", admin_article_category_path(c), :method => :delete,:class => "btn btn-default"%></td>
          </tr>
           <%end%>
           <tr>
           </tr>
        </table>
      </div>
    </div>
    </div>
  </div>